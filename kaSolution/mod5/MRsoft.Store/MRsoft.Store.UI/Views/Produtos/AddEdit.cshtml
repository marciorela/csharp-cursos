@model ProdutosAddEditVM

<h2>@ViewBag.Title</h2>

<form method="post">

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input class="form-control" asp-for="Nome" autofocus>
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaId"></label>
        <select class="form-control" asp-for="CategoriaId" asp-items="ViewBag.Categorias">
            <option value="">Selecione...</option>
            @*@foreach (Categoria categoria in ViewBag.Categorias) {
                <option selected="@(categoria.Id==Model?.CategoriaId)" value="@categoria.Id">@categoria.Nome</option>
            }*@
        </select>
        <span asp-validation-for="CategoriaId"></span>
    </div>

    <div class="form-group">
        <label asp-for="Preco"></label>
        <input class="form-control" asp-for="Preco">
        <span asp-validation-for="Preco"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea class="form-control" asp-for="Descricao" rows="4"></textarea>
        <span asp-validation-for="Descricao"></span>
    </div>

    <div>
        <button class="btn btn-outline-info" type="submit">Salvar</button>
        <a class="btn btn-outline-dark" asp-controller="Produtos" asp-action="Index">Voltar</a>
    </div>

</form>

@section scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
